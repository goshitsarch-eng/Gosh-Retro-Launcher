{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gosh Retro Launcher",
  "version": "1.0.0",
  "identifier": "com.goshitsarch.gosh-retro-launcher",
  "build": {
    "beforeDevCommand": "npm run dev:frontend",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Gosh Retro Launcher",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: tauri:"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": [
      "icons/*"
    ],
    "copyright": "Copyright 2024 Goshitsarch",
    "category": "Utility",
    "shortDescription": "Gosh Retro Launcher - Windows 3.1 Program Manager clone",
    "longDescription": "A nostalgic recreation of the Windows 3.1 Program Manager for launching applications, built with Tauri and Svelte",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "section": "utils"
      },
      "rpm": {
        "release": "1"
      }
    },
    "macOS": {
      "entitlements": "./entitlements.plist",
      "signingIdentity": "-",
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 130,
          "y": 220
        },
        "applicationFolderPosition": {
          "x": 410,
          "y": 220
        },
        "windowSize": {
          "height": 400,
          "width": 540
        }
      }
    },
    "windows": {
      "allowDowngrades": true,
      "digestAlgorithm": "sha256",
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compression": "lzma"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
