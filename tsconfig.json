{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["svelte", "@types/node"]
  },
  "include": [
    "src/renderer/**/*",
    "src/renderer/**/*.svelte",
    "src/renderer/src/types/*.d.ts",
    "src/shared/**/*",
    "vite.config.ts",
    "svelte.config.js"
  ],
  "exclude": [
    "node_modules",
    "src-tauri"
  ]
}
